{
    "version": 2,
    "builds": [
        { "src": "src/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/api/chat",
            "methods": ["POST", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type"
            }
        },
        {
            "src": "/src/(.*)",
            "dest": "/src/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/$1"
        }
    ]
}