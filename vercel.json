{
    "version": 2,
    "builds": [
      { "src": "src/**", "use": "@vercel/static" }
    ],
    "routes": [
      { 
        "src": "/src/(.*\\.(js|png|html|css))",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "GET, OPTIONS",
          "Access-Control-Allow-Headers": "*",
          "Cache-Control": "public, max-age=0, must-revalidate"
        },
        "dest": "/src/$1"
      },
      { 
        "src": "/(.*)",
        "dest": "/src/$1"
      }
    ]
}